<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To Do List</title>
    <link rel="stylesheet" href="CSS/styles.css" />
  </head>
  <body>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">

    <%  newListItems.forEach(function(newListItem){ %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="itemCompleted" value="<%= newListItem._id %>" onChange="this.form.submit()"/>
          <p><%= newListItem.name %></p >
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>
    <% }) %>
    
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required/>
        <button type="submit" name="addItem" value="<%= listTitle %>">+</button>
      </form>

    </div>

  </body>
</html>
